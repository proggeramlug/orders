version: 0.2

phases:
  install:
    runtime-versions:
      docker: 18
    commands:
      - nohup /usr/local/bin/dockerd --host=unix:///var/run/docker.sock --host=tcp://127.0.0.1:2375 --storage-driver=overlay&
      - timeout 15 sh -c "until docker info; do echo .; sleep 1; done"
  pre_build:
    commands:
      - echo Logging in to Amazon ECR...
      - $(aws ecr get-login --no-include-email --region us-east-1)
  build:
    commands:
      - echo Building the docker images
      - docker build -t parkplatz-reports .
      - docker tag parkplatz-reports:latest 054821236114.dkr.ecr.us-east-1.amazonaws.com/users
  post_build:
    commands:
      - echo Pushing to ECR
      - docker push 054821236114.dkr.ecr.us-east-1.amazonaws.com/users:latest
      - printf '[{"name":"parkplatz-reports","imageUri":"%s"}]' 054821236114.dkr.ecr.us-east-1.amazonaws.com/users > imagedefinitions.json
      
artifacts:
    files: imagedefinitions.json
